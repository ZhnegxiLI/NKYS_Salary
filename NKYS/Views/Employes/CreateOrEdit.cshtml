@model NKYS.Models.Employe

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employe</h4>
<hr />
<div class="row">
  
    <form asp-action="CreateOrEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h5>General info</h5>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="GroupsId" class="control-label"></label><span class="text-danger">*</span>
                <select asp-for="GroupsId" class="form-control" asp-items="ViewBag.GroupsId"></select>
            </div>

            <div class="form-group col-4">
                <label asp-for="Name" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-4">
                <label asp-for="ExternalId" class="control-label"></label>
                <input asp-for="ExternalId" class="form-control" />
                <span asp-validation-for="ExternalId" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="EntreEntrepriseDate" class="control-label"></label>
                <input asp-for="EntreEntrepriseDate" class="form-control" />
                <span asp-validation-for="EntreEntrepriseDate" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="DepartDate" class="control-label"></label>
                <input asp-for="DepartDate" class="form-control" />
                <span asp-validation-for="DepartDate" class="text-danger"></span>
            </div>
        </div>
        <h5>补贴</h5>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="PositionPay" class="control-label"></label>
                <input asp-for="PositionPay" class="form-control" />
                <span asp-validation-for="PositionPay" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="SeniorityPay" class="control-label"></label>
                <input asp-for="SeniorityPay" class="form-control" />
                <span asp-validation-for="SeniorityPay" class="text-danger"></span>
            </div>
        </div>
        <h5>产值工资计算</h5>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="TechnicalLevel" class="control-label"></label>
                <input asp-for="TechnicalLevel" class="form-control" />
                <span asp-validation-for="TechnicalLevel" class="text-danger"></span>
            </div>
        </div>
        <h5>计时工资计算</h5>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="FixSalary" class="control-label"></label>
                <input asp-for="FixSalary" class="form-control" />
                <span asp-validation-for="FixSalary" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="DeductionPercentage" class="control-label"></label>
                <input asp-for="DeductionPercentage" class="form-control" />
                <span asp-validation-for="DeductionPercentage" class="text-danger"></span>
            </div>
        </div>

        <h5>杂项</h5>
        <div class="form-group">
            <label asp-for="ProductionValueTypeId" class="control-label"></label>
            <select asp-for="ProductionValueTypeId" class="form-control multi-select selectpicker" multiple="multiple" asp-items="Html.GetEnumSelectList<ProductionValueType>()"></select>
            <span asp-validation-for="ProductionValueTypeId" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="SelfPaySocialSercurityFee" /> @Html.DisplayNameFor(model => model.SelfPaySocialSercurityFee)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="HousingReservesFee" /> @Html.DisplayNameFor(model => model.HousingReservesFee)
            </label>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="SocialSercurityFee" /> @Html.DisplayNameFor(model => model.SocialSercurityFee)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="HasDorm" /> @Html.DisplayNameFor(model => model.HasDorm)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsChefOfGroup" /> @Html.DisplayNameFor(model => model.IsChefOfGroup)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsTemporaryEmploye" /> @Html.DisplayNameFor(model => model.IsTemporaryEmploye)
            </label>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
